{% endfor %}
\end{itemize}
\vspace{0.1em}
{% endfor %}
{% endif %}

%----------------- Certifications -----------------%
{% if certifications %}
\section*{Certifications}
\vspace{-0.3em}
\begin{itemize}[leftmargin=1.2em, itemsep=0pt, topsep=0pt, parsep=0pt]
{% for cert in certifications %}
\item \textbf{ {{- cert.name -}} }, \textit{ {{- cert.issuer -}} }, {{ cert.year }}{% if cert.url %}, \href{ {{- cert.url -}} }{Credly Badge}{% endif %}
{% endfor %}
\end{itemize}
{% endif %}

%----------------- Involvement -----------------%
{% if involvement %}
\section*{Involvement}
{% for inv in involvement %}
\noindent\textbf{ {{- inv.title -}} }: {{ inv.description }}
\vspace{0.1em}
{% endfor %}
{% endif %}

%----------------- Skills -----------------%
{% if skills or languages %}
\section*{Skills}
{% if skills %}
{% for category, items in skills.items() %}
\noindent\textbf{ {{- category -}} }: {{ items | join(', ') }}
{% endfor %}
{% endif %}
{% if languages %}
\noindent\textbf{Languages}: {{ languages | join(', ') }}
{% endif %}
{% endif %}

%----------------- Education -----------------%
{% if education %}
\section*{Education}
\vspace{-0.3em}
{% for edu in education %}
\textbf{ {{- edu.degree -}} }, \textit{ {{- edu.institution -}} }, {{ edu.start }} -- {{ edu.end }}
\\{{ edu.description }}
{% if edu.academic_experience %}
\begin{itemize}
{% for a in edu.academic_experience %}
\item \textbf{ {{- a.title -}} }: {{ a.description }}
{% endfor %}
\end{itemize}
{% endif %}
{% endfor %}
{% endif %}

